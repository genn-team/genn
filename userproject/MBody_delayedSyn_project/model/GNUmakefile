EXECUTABLE	:=classol_sim
ifeq ($(CPU_ONLY),1)
  SOURCES :=classol_sim_cpu_only.cc
else
  SOURCES :=classol_sim.cu
endif

OPTIMIZATIONFLAGS:= -O3 -ffast-math
NVCC_OPTIMIZATIONFLAGS:= -use_fast_math -O3
GENN_PATH	?=$(realpath $(dir $(realpath GNUmakefile))../../..)

